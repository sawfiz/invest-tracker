generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model StockTrade {
  id        Int       @id @default(autoincrement())
  date      DateTime
  broker    Broker
  trader    Trader
  action    TradeType
  ticker    String    @db.VarChar(255)
  shares    Float
  price     Float
  fees      Float
  amount    Float
  notes     String?   @db.Text
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum TradeType {
  Buy
  Sell
  Split
}

enum Broker {
  MooMoo
  IBKR
  Syfe
}

enum Trader {
  Xinfei
  Victor
  Justin
  Shuya
}
